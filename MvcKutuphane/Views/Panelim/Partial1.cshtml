@using MvcKutuphane.Models.Entity
@model List<TBLDUYURULAR>

@{ 
    string renk = "";
}

@foreach (var item in Model)
{
    if (item.KATEGORI == "Diğer")
    {
        renk = "bg-info text-white";
    }
    if (item.KATEGORI == "Yeni Kitap")
    {
        renk = "bg-warning text-white";
    }
    if (item.KATEGORI == "İletişim")
    {
        renk = "bg-success text-white";
    }
    if (item.KATEGORI == "Kitapları Geciktirmeyin")
    {
        renk = "bg-danger text-white";
    }
    <div class="post">
        <div class="user-block">
            <img class="img-circle img-bordered-sm" src="~/AdminLTE-3.0.4/dist/img/2.png" alt="user image">
            <span class="username">
                <a href="#" class="@renk">@item.KATEGORI</a>
                <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>
            </span>
            <span class="description">@item.TARIH.ToString()</span>
        </div>
        <p>
            @item.ICERIK
        </p>
    </div>
}